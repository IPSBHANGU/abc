<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/gestures_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

	<PreferenceCategory
		android:key="gestures_category"
		android:title="@string/gestures_category_title">

		<Preference
			android:key="op_gesture_settings"
			android:title="@string/op_settings_title"
			android:summary="@string/op_settings_summary"
			android:fragment="com.aosmp.settings.fragments.OmniGestureSettings" />

		<Preference
			android:key="gesture_settings"
			android:title="@string/gesture_system_preference"
			android:fragment="com.android.settings.gestures.GestureSettings"
			settings:controller="com.android.settings.gestures.GesturesSettingPreferenceController"/>

	</PreferenceCategory>

	<PreferenceCategory
		android:key="doubletap_category"
		android:title="@string/doubletap_title">

		<com.aosmp.settings.preferences.SystemSettingSwitchPreference
			android:key="double_tap_sleep_lockscreen"
			android:title="@string/double_tap_to_sleep_lockscreen_title"
			android:summary="@string/double_tap_to_sleep_lockscreen_summary"
			android:defaultValue="false" />

		<com.aosmp.settings.preferences.SystemSettingSwitchPreference
			android:key="double_tap_sleep_gesture"
			android:title="@string/double_tap_to_sleep_title"
			android:summary="@string/double_tap_to_sleep_summary"
			android:defaultValue="false" />
	
	</PreferenceCategory>

</PreferenceScreen>
